@model EcommerceSite.Data.Model.LoginViewModel


@{
    ViewData["Title"] = "Register";
}

<div class="col-md-6 p-b-30">
    <form asp-controller="Account" asp-action="Register" method="post" class="form-horizontal" role="form">
        <h4 class="m-text26 p-b-36 p-t-15">
            Register your Account
        </h4>

        <div class="form-group">
            <div class="bo4 of-hidden size15 m-b-20">
                <input asp-for="UserName" class="sizefull s-text7 p-l-22 p-r-22" placeholder="Enter username" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="bo4 of-hidden size15 m-b-20">
                <input asp-for="Email" class="sizefull s-text7 p-l-22 p-r-22" placeholder="Enter email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="bo4 of-hidden size15 m-b-20">
                <input asp-for="Number" class="sizefull s-text7 p-l-22 p-r-22" placeholder="Enter phone Number" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="bo4 of-hidden size15 m-b-20">
                <input asp-for="Password" class="sizefull s-text7 p-l-22 p-r-22" placeholder="Enter password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="bo4 of-hidden size15 m-b-20">
                <input asp-for="ConfirmPassword" class="sizefull s-text7 p-l-22 p-r-22" placeholder="Re-type password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="w-size25">
                <input class="flex-c-m size2 bg1 bo-rad-23 hov1 m-text3 trans-0-4" type="submit" value="Register" />
            </div>
        </div>
    </form>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
