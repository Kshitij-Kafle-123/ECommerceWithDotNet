@model IEnumerable<EcommerceSite.Data.Model.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";

}


<h2>Index</h2>
<a class="btn btn-success mt-5" style="margin: 10px" asp-controller="Category" asp-action="Create">Create new Category</a>


@if (TempData["message"] != null)
{
    <div class="alert alert-success alert-dismissible" id="alerts" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        @TempData["Message"]
    </div>

}


<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.CategoryName</td>
                <td><a class="btn btn-info" asp-area="" asp-controller="Category" asp-action="Edit" asp-route-id="@category.CategoryId">Edit</a></td>
                <td><a class="btn btn-danger" asp-area="" asp-controller="Category" asp-action="Delete" asp-route-id="@category.CategoryId" onclick="return confirm('Are you sure you want to delete this item?');">Delete</a></td>
            </tr>
        }
    </tbody>
</table>

<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script>
    $(document).ready(function () {

        $.fn.pause = function (duration) {
            $(this).animate({ dummy: 1 }, duration);
            return this;
        };
    });
    $("#alerts").fadeOut(5000);
</script>