@model IEnumerable<EcommerceSite.Data.Model.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";

}


<h2>Index</h2>
<a class="btn btn-success mt-5" style="margin: 10px" asp-controller="Product" asp-action="Create">Create new Product</a>


@if (TempData["message"] != null)
{
    <div class="alert alert-success alert-dismissible" id="alerts" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        @TempData["Message"]
    </div>

}

<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Image</th>
            <th>Rate</th>
            <th>Discount</th>
            <th>Short Description</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var Product in Model)
        {
        <tr>
            <td>@Product.ProductName</td>
            <td> <img src="@Url.Content(Product.Image)" style="width:100px" /></td>
            <td>@Product.Rate</td>
            <td>@Product.Discount</td>
            <td>@Product.ShortDescription</td>
            <td><a class="btn btn-info" asp-area="" asp-controller="Product" asp-action="Edit" asp-route-id="@Product.ProductId">Edit</a></td>
            <td><a class="btn btn-danger" asp-area="" asp-controller="Product" asp-action="Delete" asp-route-id="@Product.ProductId" onclick="return confirm('Are you sure you want to delete this item?');">Delete</a></td>
        </tr>
        }
    </tbody>
</table>

<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script>
    $(document).ready(function () {

        $.fn.pause = function (duration) {
            $(this).animate({ dummy: 1 }, duration);
            return this;
        };
    });
    $("#alerts").fadeOut(5000);
</script>

