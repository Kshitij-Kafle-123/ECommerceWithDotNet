@model EcommerceSite.Data.ViewModel.ProductListViewModel
    <!-- Title Page -->
    <section class="bg-title-page p-t-50 p-b-40 flex-col-c-m" style="background-image: url(@Url.Content("~/images/product1.jpg")">
        <h2 class="l-text2 t-center">
            Fashion Sale
        </h2>
        <p class="m-text13 t-center">
            Exercise your rights to fashion
        </p>
    </section>
    <!-- Content page -->
    <section class="bgwhite p-t-55 p-b-65">
        <div class="container">
            <div class="row">
                <div class="col-sm-6 col-md-4 col-lg-3 p-b-50">
                    <div class="leftbar p-r-20 p-r-0-sm">
                        <!--  -->
                        <h4 class="m-text14 p-b-7">
                            Categories
                        </h4>
                        <ul class="p-b-54">
                            @await Component.InvokeAsync("CategoryMenu")
                        </ul>
                        <div class="search-product pos-relative bo4 of-hidden">
                            <form class="form-control" asp-controller="Product" asp-action="Search" method="get">
                                <input class="s-text7 size6 p-l-23 p-r-50" type="text" name="searchString" value="@ViewData["searchString"]" placeholder="Search Products...">
                            </form>
                        </div>
                    </div>
                </div>

                <div class="col-sm-6 col-md-8 col-lg-9 p-b-50">
                     <div class="sec-title p-b-60">
                          <h3 class="m-text5 t-center">
                            Our Products
                          </h3>
                      </div>


                @foreach (var product in Model.Products)
                {
                    @await Html.PartialAsync("_productList", product);
                }
                <!-- Product -->
                    <!-- Pagination -->
                    <div class="pagination flex-m flex-w p-t-26">
                        <a href="#" class="item-pagination flex-c-m trans-0-4 active-pagination">1</a>
                        <a href="#" class="item-pagination flex-c-m trans-0-4">2</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
