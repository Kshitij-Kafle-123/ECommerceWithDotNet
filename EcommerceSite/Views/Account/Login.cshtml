@model EcommerceSite.Data.Model.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="col-md-6 p-b-30">
    <form asp-controller="Account" asp-action="Login" method="post" class="form-horizontal" role="form">
        <h4 class="m-text26 p-b-36 p-t-15">
            Login to your Account
        </h4>

        <div class="form-group">
            <div class="bo4 of-hidden size15 m-b-20">
                <input asp-for="UserName" class="sizefull s-text7 p-l-22 p-r-22" placeholder="Enter username" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="bo4 of-hidden size15 m-b-20">
                <input asp-for="Password" class="sizefull s-text7 p-l-22 p-r-22" placeholder="Enter password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="w-size25">
                <input class="flex-c-m size2 bg1 bo-rad-23 hov1 m-text3 trans-0-4" type="submit" value="Login" />
            </div>
        </div>
        <div class="form-group">
            <a href="@Url.Action("Register","Account")" style="color:red"> Register Account </a>
        </div>
    </form>
</div>
